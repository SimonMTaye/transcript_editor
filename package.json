{
  "name": "transcript-editor-etrm",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:pocketbase": "./pocketbase.app serve",
    "dev:vite": "vite --force",
    "dev:wrangler": "wrangler dev",
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:pocketbase\" \"npm:dev:wrangler\"",
    "dev:prod": "vite --mode production",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rm -rf dist && rm -rf .wrangler/deploy",
    "test": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@deepgram/sdk": "^3.13.0",
    "@emotion/react": "^11.14.0",
    "@google/genai": "^0.9.0",
    "@mantine/core": "^7.17.4",
    "@mantine/dates": "^7.17.4",
    "@mantine/dropzone": "^7.17.4",
    "@mantine/form": "^7.17.4",
    "@mantine/hooks": "^7.17.4",
    "@tabler/icons-react": "^3.31.0",
    "@tanstack/react-query": "^5.74.4",
    "axios": "^1.8.4",
    "buffer": "^6.0.3",
    "date-fns": "^4.1.0",
    "docx": "^9.5.0",
    "openai": "^4.96.0",
    "pocketbase": "^0.26.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.5.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.1.1",
    "@eslint/js": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vitest": "^3.2.0",
    "wrangler": "^4.14.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4"
  }
